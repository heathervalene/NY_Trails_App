//my hikes page with list of completed hikes and fire towers
<%- include('../partials/header') %>

<h2>My completed Fire Towers</h2>
<table id="firetower-list">
    <thead>
        <tr>
            <th>Name</th>
            <th>Region</th>
            <th>Date Completed</th>
        </tr>
    </thead>
    <tbody>

    <% fireTower.forEach(function(f) { %>
        <tr>
            <td>
                <%= f.name %>
            </td>
            <td>
                <%= f.region %>
                <td>
                    <%= f.dateCompleted %>
                </td>
            </td>
        </tr>
        <% }); %>
</tbody>
</table>

<br>

<h2>My completed Hikes</h2>
<table id="hike-list">
    <thead>
        <tr>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>

    <% trails.forEach(function(t) { %>
        <tr>
            <td>
                <%= t.name %>
            </td>
        </tr>
        <% }); %>
</tbody>
</table>

<br>

<h2>Add your completed hike</h2>
