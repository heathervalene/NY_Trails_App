    <label for="trailName">Trail Name:</label>
    <select name="trailName" >
    <option value="Hunter Mountain">Hunter Mountain/option>
    <option value="Balsam Lake Mountain">Balsam Lake Mountain</option>
    <option value="Hadly Mountain">Hadly Mountain</option>
    <option value="Poke O Moonshine Mountain">Poke O Moonshine Mountain</option>
    <option value="Spruce Mountain">Spruce Mountain</option>
    <option value="Overlook Mountain">Overlook Mountain</option>
    <option value="Pillsbury Mountain">Pillsbury Mountain</option>
    <option value="Black Mountain">Black Mountain</option>
    <option value="Red Hill Mountain">Red Hill Mountain</option>
    <option value="Belfry Mountain">Belfry Mountain</option>
    <option value="Vanderwacher Mountain">Vanderwacher Mountain</option>
    <option value="Mount Tremper">Mount Tremper</option>
    <option value="Goodnow Mountain">Goodnow Mountain/option>
    <option value="Snowy Mountain">Snowy Mountain</option>
    <option value="Mount Arab">Mount Arab</option>
    <option value="Blue Mountain">Blue Mountain</option>
    <option value="Owls Head Mountain">Owls Head Mountain</option>
    <option value="Kane Mountain">Kane Mountain</option>
    <option value="Whiteface Mountain">Whiteface Mountain</option>
    <option value="Azure Mountain">Azure Mountain</option>
    <option value="Saint Regis Mountain">Saint Regis Mountain</option>
    <option value="Wakely Mountain">Wakely Mountain</option>
